    <input type="file" id="imageInput" accept="image/*" />
    <label for="quality">Compression Quality: <span id="qualityVal">0.8</span></label>
    <input type="range" id="quality" min="0.1" max="1" step="0.1" value="0.8" />
    <button onclick="compressImage()">Compress Image</button>
    <div class="output">
      <h3>Compressed Image Preview:</h3>
      <canvas id="canvas"></canvas>
      <a id="downloadLink" style="display:none" download="compressed-image.jpg">Download Image</a>
    </div>
